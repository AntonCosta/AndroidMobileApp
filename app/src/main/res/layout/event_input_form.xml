<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.costa.androidmobileapp.CreateEvent">


    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/accPeopleEditText"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/numberPickerAdd"
        android:layout_alignStart="@+id/eventNameEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="People accepted: "
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/eventNameEditText" />

    <NumberPicker
        android:id="@+id/numberPickerAdd"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/eventNameEditText"
        android:layout_below="@+id/eventNameEditText"
        android:layout_alignRight="@+id/eventNameEditText" />

    <EditText
        android:id="@+id/orgNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/eventNameEditText"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of the organizor"
        android:layout_alignLeft="@+id/eventNameEditText" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/orgNameEditText"
        android:layout_alignStart="@+id/orgNameEditText"
        android:layout_below="@+id/orgNameEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location" />


</RelativeLayout>